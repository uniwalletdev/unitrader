# ─────────────────────────────────────────────
# ENVIRONMENT
# ─────────────────────────────────────────────
ENVIRONMENT=development
DEBUG=true
API_HOST=http://localhost
API_PORT=8000

# ─────────────────────────────────────────────
# DATABASE
# ─────────────────────────────────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/unitrader_db
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# ─────────────────────────────────────────────
# AUTHENTICATION
# ─────────────────────────────────────────────
# Clerk dashboard: https://dashboard.clerk.com
CLERK_API_KEY=sk_test_your_clerk_key

# Generate: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-secret-key-min-32-chars-long
ACCESS_TOKEN_EXPIRE_HOURS=1
REFRESH_TOKEN_EXPIRE_DAYS=30

# ─────────────────────────────────────────────
# ENCRYPTION
# ─────────────────────────────────────────────
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_ENCRYPTION_KEY=your-fernet-key-here
FIELD_ENCRYPTION_KEY=your-fernet-key-here

# ─────────────────────────────────────────────
# AI / LLM
# ─────────────────────────────────────────────
# Anthropic Console: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ─────────────────────────────────────────────
# PAYMENTS
# ─────────────────────────────────────────────
# Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRO_PRICE_ID=price_your_pro_monthly_price_id

# ─────────────────────────────────────────────
# EMAIL
# ─────────────────────────────────────────────
# Resend Dashboard: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_key
EMAIL_FROM=noreply@yourdomain.com

# ─────────────────────────────────────────────
# TRADING APIs
# ─────────────────────────────────────────────

# Binance: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_key
BINANCE_API_SECRET=your_binance_secret
BINANCE_BASE_URL=https://api.binance.com

# Alpaca: https://app.alpaca.markets/paper-trading/overview
ALPACA_API_KEY=your_alpaca_key
ALPACA_API_SECRET=your_alpaca_secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# OANDA: https://www.oanda.com/us-en/trading/
OANDA_API_KEY=your_oanda_key
OANDA_ACCOUNT_ID=your_oanda_account_id
OANDA_BASE_URL=https://api-fxpractice.oanda.com

# ─────────────────────────────────────────────
# MONITORING
# ─────────────────────────────────────────────
# Sentry: https://sentry.io
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ─────────────────────────────────────────────
# TELEGRAM BOT
# ─────────────────────────────────────────────
# How to get your token:
#   1. Open Telegram and message @BotFather
#   2. Send: /newbot
#   3. Choose a name (e.g. "Unitrader") and username (e.g. "unitrader_bot")
#   4. BotFather replies with the token — copy it here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=unitrader_bot

# Public HTTPS base URL that Telegram will call for webhook updates.
# Production:  use your real domain  e.g. https://api.unitrader.com
# Development: use an ngrok tunnel   e.g. https://abc123.ngrok.io
#   Install ngrok: https://ngrok.com/download
#   Start tunnel: ngrok http 8000
#   Then set API_BASE_URL to the https URL ngrok prints
API_BASE_URL=https://api.unitrader.com

# ─────────────────────────────────────────────
# WHATSAPP / TWILIO
# ─────────────────────────────────────────────
# How to set up:
#   1. Sign up at https://www.twilio.com/whatsapp
#   2. Copy Account SID and Auth Token from the Twilio Console dashboard
#   3. Sandbox number (free testing): +14155238886
#      → Message "join <sandbox-code>" to that number from your WhatsApp
#   4. Set the Twilio webhook URL to:
#      https://<your-domain>/webhooks/whatsapp   (use ngrok for local dev)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=+14155238886

# ─────────────────────────────────────────────
# CORS
# ─────────────────────────────────────────────
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
