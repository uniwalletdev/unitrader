{
  "version": 2,
  "name": "unitrader-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.unitrader.ai"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.unitrader.ai/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ],
  "domains": [
    "unitrader.ai",
    "www.unitrader.ai"
  ]
}
